<div class="header">
  <div class="title">
    <%= link_to "DREAM", root_path, class:"title-content" %>
  </div>
  <div class="user-function">
    <% if user_signed_in? %>
      <div class="user-functions">
      <%=link_to "ログアウト", destroy_user_session_path, method: :delete, class:"user-content" %> 
      </div>
      <div class="user-functions">
      <%=link_to "マイページ", dream_path(current_user.id), class:"user-content" %>
      </div>
    <%else%>
      <div class="user-functions">
        <%=link_to "ログイン", new_user_session_path, class:"user-content" %> 
      </div>
      <div class="user-functions">
        <%=link_to "新規登録", new_user_registration_path, class:"user-content" %>
      </div>
    <%end%>
  </div>
</div>